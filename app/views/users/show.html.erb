  <% @items.each do |item| %>

  <% if item.name %>

  <%= render partial: 'items/item', locals: {item: item} %>

    <%= link_to "delete me", item, method: :delete, id: item.id, class: 'glyphicon glyphicon-ok', remote: true %>
      
