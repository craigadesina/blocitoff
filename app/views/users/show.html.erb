  Name: <%= @user.name %>

  Email: <%= @user.email %>

  Member since: <%= @user.updated_at %> <br />

  Items: <%= @user.items.count %> <br />

  Today's date: <input type='date' value='<%=Time.now.to_date %>'>

  Video: <video width='600' height='300' id='video' controls='controls' autoplay='true'>
